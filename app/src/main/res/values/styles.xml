<resources>

    <style name="AppThemeActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/dribble_yellow</item>
        <item name="colorPrimaryDark">@color/dribble_yellow</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccentDark</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="CustomTextStyleFull" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">22sp</item>

    </style>

</resources>
