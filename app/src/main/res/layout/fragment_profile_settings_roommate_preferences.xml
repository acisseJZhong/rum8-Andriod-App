<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp">

    <!-- HEADER TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_settings_roommate_preferences_header_text"
        android:text="@string/ps_roommate_preferences_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="10"
        android:columnCount="4"
        android:id="@+id/roommate_preferences_grid"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_roommate_preferences_header_text">

        <!-- GENDER -->
        <TextView
            android:id="@+id/roommate_preferences_gender_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ps_roommate_preferences_gender"
            android:layout_row="1"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            />

        <CheckBox
            android:id="@+id/roommate_preferences_gender_preference_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="@string/ps_roommate_preferences_option_yes" />

        <CheckBox
            android:id="@+id/roommate_preferences_gender_preference_no_pref"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="@string/ps_roommate_preferences_option_no_pref" />

        <CheckBox
            android:id="@+id/roommate_preferences_gender_preference_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="@string/ps_roommate_preferences_option_no" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>