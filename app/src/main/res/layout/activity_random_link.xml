<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RandomLink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        android:gravity="center"
        >

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/easyFlipView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:flipDuration="700"
            app:flipEnabled="true"
            app:flipOnTouch="true"
            app:flipType="vertical"
            android:layout_gravity="center|left"
            >

            <ImageView
                android:id="@+id/front1"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:gravity="center"
                android:src="@drawable/coin1" />

            <ImageView
                android:id="@+id/back1"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:gravity="center"
                android:src="@drawable/coin1" />

        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/easyFlipView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:flipDuration="700"
            app:flipEnabled="true"
            app:flipOnTouch="true"
            app:flipType="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/front2"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:gravity="center"
                android:src="@drawable/coin2" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:gravity="center"
                android:src="@drawable/coin2" />

        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/easyFlipView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center|right"
            app:flipDuration="700"
            app:flipEnabled="true"
            app:flipOnTouch="true"
            app:flipType="vertical"

            >

            <ImageView
                android:id="@+id/front3"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:gravity="center"
                android:src="@drawable/coin3" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:gravity="center"
                android:src="@drawable/coin3" />

        </com.wajahatkarim3.easyflipview.EasyFlipView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="PICK ONE"
        android:textSize="70dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:layout_marginTop="500dp"
        />
</RelativeLayout>