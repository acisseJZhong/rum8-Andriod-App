<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <!-- HEADER TEXT -->
    <TextView
        android:id="@+id/profile_settings_general_info_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ps_general_info_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/general_info_profile_image_view"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_general_info_header_text"
        />

    <GridLayout
        android:id="@+id/general_info_name_fields_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="7"
        app:layout_constraintTop_toBottomOf="@id/general_info_profile_image_view">

        <!-- PROFILE IMAGE -->
        <Button
            android:id="@+id/general_info_profile_image_upload_button"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:text="@string/choose_from_device" />

        <Button
            android:id="@+id/general_info_profile_image_save_button"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:text="@string/upload_Photo" />


        <!-- NAME LABELS -->
        <TextView
            android:id="@+id/general_info_first_name_field_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/ps_general_info_first_name_label" />

        <TextView
            android:id="@+id/general_info_last_name_field_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="@string/ps_general_info_last_name_label" />

        <!--NAME TEXT FIELDS -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/general_info_first_name_field_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:paddingEnd="24dp"
            app:boxStrokeColor="@color/ucsd_navy_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/general_info_first_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/general_info_last_name_field_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:paddingEnd="24dp"
            app:boxStrokeColor="@color/ucsd_navy_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/general_info_last_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- GENDER -->
        <TextView
            android:id="@+id/general_info_gender_label"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/ps_general_info_gender_label" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/general_info_gender_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <!-- ACADEMIC YEAR -->
        <TextView
            android:id="@+id/general_info_academic_year_label"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/ps_general_info_academic_year_label" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/general_info_academic_year_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <!-- COLLEGE -->
        <TextView
            android:id="@+id/general_info_college_label"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/ps_general_info_college_label" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/general_info_college_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <!-- SAVE -->
        <Button
            android:id="@+id/general_info_profile_next_button"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="left"
            android:text="Save"/>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>