<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:layout_editor_absoluteY="81dp">

    <!-- HEADER TEXT -->
    <TextView
        android:id="@+id/profile_settings_personal_preferences_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ps_personality_logistics_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/personal_preferences_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="18"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_personal_preferences_header_text">

        <!-- CLEANLINESS -->
        <TextView
            android:id="@+id/personal_preferences_cleanliness_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_cleanness" />


        <RadioGroup
            android:id="@+id/personal_preferences_cleanliness_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="2"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_cleanliness_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_cleanliness_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_sometimes" />

            <RadioButton
                android:id="@+id/personal_preferences_cleanliness_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>


        <!-- RESERVED -->
        <TextView
            android:id="@+id/personal_preferences_reserved_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_reserved" />

        <RadioGroup
            android:id="@+id/personal_preferences_reserved_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="4"

            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_reserved_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_reserved_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_somewhat" />

            <RadioButton
                android:id="@+id/personal_preferences_reserved_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>


        <!-- PARTIES -->
        <TextView
            android:id="@+id/personal_preferences_parties_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_comfortable_with_parties" />

        <RadioGroup
            android:id="@+id/personal_preferences_parties_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="6"

            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_parties_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_parties_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_sometimes" />

            <RadioButton
                android:id="@+id/personal_preferences_parties_preference_no_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>

        <!-- ALCOHOL -->
        <TextView
            android:id="@+id/personal_preferences_alcohol_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_comfortable_with_alcohol" />

        <RadioGroup
            android:id="@+id/personal_preferences_alcohol_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="8"

            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_alcohol_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_alcohol_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_sometimes" />

            <RadioButton
                android:id="@+id/personal_preferences_alcohol_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>

        <!-- SMOKE -->
        <TextView
            android:id="@+id/personal_preferences_smoke_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_comfortable_with_smoking" />

        <RadioGroup
            android:id="@+id/personal_preferences_smoke_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="10"

            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_smoke_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_smoke_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_sometimes" />

            <RadioButton
                android:id="@+id/personal_preferences_smoke_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>

        <!-- SLEEP -->
        <TextView
            android:id="@+id/personal_preferences_sleep_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="11"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_sleep_late" />

        <RadioGroup
            android:id="@+id/personal_preferences_sleep_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="12"

            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_sleep_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_sleep_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_sometimes" />

            <RadioButton
                android:id="@+id/personal_preferences_sleep_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>

        <!-- GUESTS -->
        <TextView
            android:id="@+id/personal_preferences_guests_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="13"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_overnight_guests" />

        <RadioGroup
            android:id="@+id/personal_preferences_guests_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="14"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_guests_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_guests_preference_no_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ps_roommate_preferences_option_sometimes" />

            <RadioButton
                android:id="@+id/personal_preferences_guests_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>

        <!-- PET -->
        <TextView
            android:id="@+id/personal_preferences_pet_preference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="15"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="@string/ps_personality_logistics_comfortable_with_pets" />

        <RadioGroup
            android:id="@+id/personal_preferences_pet_preference_radio_group"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_row="16"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_preferences_pet_preference_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/personal_preferences_pet_preference_maybe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/maybe" />

            <RadioButton
                android:id="@+id/personal_preferences_pet_preference_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no" />
        </RadioGroup>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="17"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/personal_references_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"/>

            <Button
                android:id="@+id/personal_references_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>